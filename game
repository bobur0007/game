<body>
    <div class="game">
        <h1>üéÆ –ö–õ–ò–ö–ï–† –°–û –ó–í–£–ö–ê–ú–ò</h1>
        
        <div class="click-area" onclick="clickHandler()" id="clickArea">
            <div class="score" id="score">0</div>
            <div>üëÜ –ö–õ–ò–ö</div>
        </div>
        
        <div class="timer" id="timer">‚è∞ 10s</div>
        
        <button class="btn" onclick="startGame()" id="startBtn">‚ñ∂ –°—Ç–∞—Ä—Ç</button>
        <button class="btn" onclick="testSound()" style="background: #4299e1;">üîä –¢–µ—Å—Ç –∑–≤—É–∫–∞</button>
    </div>

    <script>
        let score = 0;
        let timeLeft = 10;
        let timerInterval = null;
        let gameActive = false;
        
        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –∑–≤—É–∫–æ–≤ [citation:1]
        function createSound(freq, type = 'sine', duration = 0.1) {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.type = type; // sine, square, sawtooth, triangle
                oscillator.frequency.value = freq;
                gainNode.gain.value = 0.1;
                
                oscillator.start();
                oscillator.stop(audioContext.currentTime + duration);
                
                // –ü–ª–∞–≤–Ω–æ–µ –∑–∞—Ç—É—Ö–∞–Ω–∏–µ
                gainNode.gain.exponentialRampToValueAtTime(0.0001, audioContext.currentTime + duration);
            } catch(e) {
                console.log('–ê—É–¥–∏–æ –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è');
            }
        }
        
        // –†–∞–∑–Ω—ã–µ –∑–≤—É–∫–∏ –¥–ª—è —Ä–∞–∑–Ω—ã—Ö –¥–µ–π—Å—Ç–≤–∏–π
        function playClickSound() {
            createSound(800, 'sine', 0.1); // –≤—ã—Å–æ–∫–∏–π –∑–≤—É–∫
        }
        
        function playGameStartSound() {
            createSound(600, 'sine', 0.2);
            setTimeout(() => createSound(800, 'sine', 0.2), 100);
            setTimeout(() => createSound(1000, 'sine', 0.3), 200);
        }
        
        function playGameEndSound() {
            createSound(400, 'sawtooth', 0.3);
            setTimeout(() => createSound(300, 'sawtooth', 0.5), 150);
        }
        
        function playBonusSound() {
            createSound(1200, 'square', 0.1);
            setTimeout(() => createSound(1400, 'square', 0.1), 50);
        }
        
        function testSound() {
            playClickSound();
        }
        
        function clickHandler() {
            if (!gameActive) {
                playGameEndSound(); // –∑–≤—É–∫ –æ—à–∏–±–∫–∏
                alert('–ù–∞–∂–º–∏ –°–¢–ê–†–¢ —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å!');
                return;
            }
            
            score++;
            document.getElementById('score').textContent = score;
            playClickSound(); // –∑–≤—É–∫ –ø—Ä–∏ –∫–ª–∏–∫–µ
            
            // –ë–æ–Ω—É—Å–Ω—ã–µ –∑–≤—É–∫–∏
            if (score % 10 === 0) {
                playBonusSound(); // –∫–∞–∂–¥—ã–µ 10 –∫–ª–∏–∫–æ–≤
            }
        }
        
        function startGame() {
            score = 0;
            timeLeft = 10;
            gameActive = true;
            document.getElementById('score').textContent = '0';
            document.getElementById('startBtn').disabled = true;
            playGameStartSound(); // –∑–≤—É–∫ —Å—Ç–∞—Ä—Ç–∞
            
            timerInterval = setInterval(() => {
                timeLeft--;
                document.getElementById('timer').textContent = `‚è∞ ${timeLeft}s`;
                
                if (timeLeft <= 0) {
                    endGame();
                }
            }, 1000);
        }
        
        function endGame() {
            clearInterval(timerInterval);
            gameActive = false;
            document.getElementById('startBtn').disabled = false;
            playGameEndSound(); // –∑–≤—É–∫ –æ–∫–æ–Ω—á–∞–Ω–∏—è
            
            let message = `–ò–≥—Ä–∞ –æ–∫–æ–Ω—á–µ–Ω–∞! –°—á—ë—Ç: ${score}`;
            if (score >= 30) message += ' üî• –°—É–ø–µ—Ä!';
            else if (score >= 20) message += ' üëç –•–æ—Ä–æ—à–æ!';
            alert(message);
        }
    </script>
